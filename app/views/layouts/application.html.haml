<!DOCTYPE html>

%html
  %head
    %title DayMash
    = stylesheet_link_merged :base
    = javascript_include_tag jquery_include_location
    = javascript_include_merged :base
    = add_html5_dom_elements_to_ie
    - if protect_against_forgery?
      = javascript_tag "DayMash.auth_token = { name: '#{request_forgery_protection_token}', value: '#{form_authenticity_token}'};"
    
  %body
    = render :partial => '/layouts/header'
    = render :partial => '/layouts/sidebar'
    #main
      = flash_to_html
      = yield
    = render :partial => '/layouts/footer'
    = rpx_scripts
    = google_analytics_scripts
