- semantic_form_for @user do |form|
  %fieldset
    %legend= t('.form.legend')
    - form.inputs do
      = form.input :username
      = form.input :email
      = form.input :display_name, :required => false
      = form.input :password
      = form.input :password_confirmation
  %fieldset
    %div
      = form.submit t('.form.submit')
